{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment",
        "paths": {
            "lib": [
                "../../lib"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../lib/supabase/models"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}